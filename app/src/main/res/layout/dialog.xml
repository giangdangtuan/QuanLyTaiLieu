<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/RLDialog"
    android:background="@color/blue_shade_1">

    <TextView
        android:id="@+id/txtTenTl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Tên tài liệu"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgTl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/txtTenTl"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txtMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTenTl"
        android:layout_margin="4dp"
        android:paddingLeft="3dp"
        android:paddingTop="23dp"
        android:layout_toRightOf="@id/imgTl"
        android:text="Mô tả"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/txtChuyenNganhTl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMoTa"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/imgTl"
        android:text="Chuyên ngành"
        android:padding="3dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/imgTl">

        <Button
            android:id="@+id/btnSua"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Sửa tài liệu"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnChiTiet"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Xem chi tiết"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>


</RelativeLayout>